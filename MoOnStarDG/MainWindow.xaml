<Window x:Class="MoOnStarDG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoOnStarDG"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="180"/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center"  >
            <Label Content="Главное окно" FontWeight="Bold" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Label Content="создайте нового спортсмена:" FontSize="15"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="имя:" FontSize="15" Width="80"/>
                <TextBox Width="187" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Фамилия:" FontSize="15" Width="80"/>
                <TextBox Width="187"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="268">
                <Label Content="Дата рождения:" FontSize="15" />
                <DatePicker Width="187"/>
            </StackPanel >
            <Button Content="Сохранить" Height="30" Width="120" HorizontalAlignment="Left" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
