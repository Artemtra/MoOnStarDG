<Window x:Class="MoOnStarDG.SportsMan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoOnStarDG"
        mc:Ignorable="d"
        Title="SportsMan" Height="450" Width="1015">
    <Grid Background="#FFD2A782">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="3" Content="Список спортсменов и тренировок" 
           FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Content="Спортсмены:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:Name="SportsmenList" ItemsSource="{Binding Sportsmen}"
                 Background="White"
                 Height="270">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id спортсмена" DisplayMemberBinding="{Binding Id}" Width="100"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="110"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding FirstName}" Width="110"/>
                        <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding DdataBirsDay}" Width="100"/>
                        <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding IdCategoryNavigation.Title}" Width="90"/>
                        <GridViewColumn Header="Уровень" DisplayMemberBinding="{Binding IdLevelNavigation.Title}" Width="90"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <Rectangle Grid.Row="1" Grid.Column="1" Fill="Gray" Width="2" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <Label Content="Тренировки:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:Name="TrainingsList" ItemsSource="{Binding Training}"
                 Background="White"
                 Height="270">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="оценка 5" Click="Grade5"/>
                        <MenuItem Header="оценка 4" Click="Grade5"/>
                        <MenuItem Header="оценка 3" Click="Grade5"/>
                        <MenuItem Header="оценка 2" Click="Grade5"/>
                        <MenuItem Header="оценка -2" Click="Grade5"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.View>
                    
                    <GridView>
                        <GridViewColumn Header="Id спортсмена" DisplayMemberBinding="{Binding IdSportsmen}" Width="90"/>
                        <GridViewColumn Header="Название тренировки" DisplayMemberBinding="{Binding Title}" Width="130"/>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding TrainingDate}" Width="70"/>
                        <GridViewColumn Header="Длительность" DisplayMemberBinding="{Binding TrainingTime}" Width="90"/>
                        <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type.Title}" Width="150"/>
                        <GridViewColumn Header="Оценка" DisplayMemberBinding="{Binding Grade.Title}" Width="70"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" >

            <Button Content="Назад в главное меню" 
           Click="BackToMainBtn_Click" Width="150"  
           HorizontalAlignment="Center" Background="#FFE6DBA9" Margin="0,0,15,0"/>

            <Button Click="BattonRefresh_Click"  Content="обновить"
                Width="150" />

        </StackPanel>
        
    </Grid>
    
</Window>