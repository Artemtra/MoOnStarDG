<Window x:Class="MoOnStarDG.SportsMan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoOnStarDG"
        mc:Ignorable="d"
        Title="SportsMan" Height="450" Width="1000">
    <Grid Background="#FFD2A782">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="3" Content="Список спортсменов и тренировок" 
           FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Content="Спортсмены:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:Name="SportsmenList" 
                 Background="White"
                 Height="270">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="100"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding FirstName}" Width="120"/>
                        <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding DdataBirsDay}" Width="110"/>
                        <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding IdCategoryNavigation.Title}" Width="100"/>
                        <GridViewColumn Header="Уровень" DisplayMemberBinding="{Binding IdLevelNavigation.Title}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <Rectangle Grid.Row="1" Grid.Column="1" Fill="Gray" Width="2" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <Label Content="Тренировки:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:Name="TrainingsList" 
                 Background="White"
                 Height="270">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="150"/>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding TrainingDate}" Width="100"/>
                        <GridViewColumn Header="Длительность" DisplayMemberBinding="{Binding TrainingTime.Title}" Width="150"/>
                        <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type.Title}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <Button Grid.Row="2" Grid.ColumnSpan="3" Content="Назад в главное меню" 
           Click="BackToMainBtn_Click" Width="150" Height="30" 
           HorizontalAlignment="Center" Background="#FFE6DBA9"/>
    </Grid>
</Window>